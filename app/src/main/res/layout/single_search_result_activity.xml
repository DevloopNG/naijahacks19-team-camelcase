<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/search_image" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="0.10">

            <LinearLayout
                android:layout_width="135dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23 / 100"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Co-Owners"
                    android:textSize="15sp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="98 Million"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="15sp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45 Million"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount Raised"
                    android:textSize="15sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.6">

           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_marginTop="2dp"
                       android:background="@color/blueGrey" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Details"
                       android:padding="10dp"
                       android:textSize="16sp"
                       android:textColor="@color/white"
                       android:layout_margin="8dp"
                       android:background="@color/orange"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="LOCATION"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Maintenance, OAU - Ife" />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />

                       <TextView
                           android:layout_marginTop="8dp"
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Area (Dimension)"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="1 Plot (750m X 1200m) (62Square Feet)" />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />

                       <TextView
                           android:layout_marginTop="8dp"
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Description"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Building of 20-story hostel for 500 students. This hostel is bounded to the East by Aquifer, to the North by Starline " />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />

                       <TextView
                           android:layout_marginTop="8dp"
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Type of Building"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="20-Storey Building with Solar Power" />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />

                       <TextView
                           android:layout_marginTop="8dp"
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Shares"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="N 330,000 per share (Maximum of 2 shares)" />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />

                       <TextView
                           android:layout_marginTop="8dp"
                           android:paddingLeft="8dp"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Construction Company"
                           android:textColor="@color/black"/>

                       <TextView
                           android:paddingLeft="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Julius Berger" />

                       <View
                           android:layout_width="230dp"
                           android:layout_height="1dp"
                           android:layout_marginTop="10dp"
                           android:background="@color/blueGrey" />
                   </LinearLayout>

               </LinearLayout>
           </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="View on Map"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.021"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/orange"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="15 Months"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completion Duration"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>